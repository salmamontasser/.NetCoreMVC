@model IEnumerable<DepartmentViewModel>

@{
    ViewData["Title"] = "All Department";
}
@if (TempData["Message"] is not null)
{
    <div class=" alert alert-success " id="success-alert" >
    @TempData["Message"]
</div>    
}
<a asp-action="Create" class="btn btn-success">Create New Department</a>
<br />
@if(Model.Count() > 0)
{
    <h1> All Departments </h1>
    <br />
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D=>D.Code)</td>
                <td>@Html.DisplayNameFor(D => D.Name)</td>
                <td>@Html.DisplayNameFor(D => D.DateOfCreation)</td>
                <td>Detials</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
          @foreach(var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>
                    <partial name="_ButtonsPartialView" model="@department.Id.ToString()"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There Is No Departments</h3>
    </div>
}

@section Fade{
    <partial name="_FadeView" />
}                   